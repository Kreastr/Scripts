#!/bin/bash

declare inOptions
declare outOptions

inOptions=("$@")
o=0

if [ `whoami` = "fibo" ]
then
   skipnext=0
   for (( i = 0; i < "${#inOptions[@]}"; i++ ))
   do
      if [ "$skipnext" = 1 ]
      then
         skipnext=0
      elif [ "${inOptions[i]}" = "-o" -o "${inOptions[i]}" = "-g" ]
      then
         skipnext=1
      elif [ "${inOptions[i]:0:2}" = "-o" -o "${inOptions[i]:0:2}" = "-g" ]
      then
         : # skip this
      else
         outOptions[o]="${inOptions[i]}"
         o=$[o+1]
      fi
   done
else
   for (( i = 0; i < "${#inOptions[@]}"; i++ ))
   do
      if [ "${inOptions[i]}" = "root" ]
      then
         outOptions[o]="0"
      else
         outOptions[o]="${inOptions[i]}"
      fi
      o=$[o+1]
   done
fi

real_install "${outOptions[@]}"
