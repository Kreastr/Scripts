#!/usr/bin/env python3

import os,sys,string

# TODO Need Python option parser!

if len(sys.argv) < 3:
    print("%s: requires two arguments." % sys.argv[0])
    sys.exit(1)

seek = sys.argv[2]

top = 0
opt = ""

modes = {}

try:
    fd=open(sys.argv[1], "r")
except:
    sys.exit(2)

ls=fd.readlines()
for l in ls:
	# TODO: split on punctuation as well.
	ws = l.split()
	for w in ws:
		lc = w.lower()
		if lc == seek:
			if w in modes:
				modes[w] = modes[w] + 1
			else:
				modes[w] = 1
			if modes[w] > top:
				top = modes[w]
				opt = w

if opt != seek and opt != "":
	if opt[0] in string.lowercase:
		opt = opt[0].upper() + opt[1:]
	print(opt)
